<!--pages/home/home.wxml-->
<swiper indicator-dots="true" autoplay="true" interval="3000" duration="800" circular="true">
    <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
        <navigator url="/packageG/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}" style="height: 100%;">
            <view style="height: 100%;width: 100%;background-color: blueviolet;color: black;">
                {{item.goods_id}}
            </view>
        </navigator>

    </swiper-item>
</swiper>

<van-grid>
    <van-grid-item use-slot wx:for="{{navList}}" wx:key="index">
        <view class="nav-item">
            <image class="nav-item-image" src="https://img2.baidu.com/it/u=209564283,2938608337&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500" mode="widthFix"></image>
            <view class="nav-item-text">{{item.name}}</view>
        </view>
    </van-grid-item>
</van-grid>